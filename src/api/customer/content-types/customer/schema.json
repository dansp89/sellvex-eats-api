{
  "kind": "collectionType",
  "collectionName": "customers",
  "info": {
    "singularName": "customer",
    "pluralName": "customers",
    "displayName": "Customer",
    "description": "Clientes do sistema de delivery"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },

    "phone": {
      "type": "string",
      "required": true
    },




    "loyaltyPoints": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "totalSpent": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },


    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "customer"
    },


    "totalOrders": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "preferences": {
      "type": "json"
    },

    "notifications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::notification.notification",
      "mappedBy": "customer"
    },


  }
}