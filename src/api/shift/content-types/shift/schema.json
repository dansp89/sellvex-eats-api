{
  "kind": "collectionType",
  "collectionName": "shifts",
  "info": {
    "singularName": "shift",
    "pluralName": "shifts",
    "displayName": "Shift",
    "description": "Turnos de trabalho dos funcion√°rios"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "employee": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::employee.employee",
      "inversedBy": "shifts"
    },
    "date": {
      "type": "date",
      "required": true
    },
    "startTime": {
      "type": "time",
      "required": true
    },
    "endTime": {
      "type": "time",
      "required": true
    },
    "actualStartTime": {
      "type": "time"
    },
    "actualEndTime": {
      "type": "time"
    },
    "breakStartTime": {
      "type": "time"
    },
    "breakEndTime": {
      "type": "time"
    },
    "totalHours": {
      "type": "decimal",
      "min": 0
    },
    "overtimeHours": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "status": {
      "type": "enumeration",
      "enum": ["scheduled", "in_progress", "completed", "absent", "cancelled"],
      "default": "scheduled"
    },
    "position": {
      "type": "string"
    },
    "notes": {
      "type": "text"
    },
    "clockInLocation": {
      "type": "json"
    },
    "clockOutLocation": {
      "type": "json"
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
