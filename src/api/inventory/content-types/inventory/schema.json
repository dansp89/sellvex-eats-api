{
  "kind": "collectionType",
  "collectionName": "inventories",
  "info": {
    "singularName": "inventory",
    "pluralName": "inventories",
    "displayName": "Inventory",
    "description": "Controle de estoque de ingredientes e produtos"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "ingredient": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::ingredient.ingredient",
      "inversedBy": "inventoryItems"
    },
    "supplier": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::supplier.supplier",
      "inversedBy": "inventoryItems"
    },
    "currentQuantity": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0
    },
    "minimumQuantity": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 10
    },
    "maximumQuantity": {
      "type": "decimal",
      "min": 0
    },
    "reorderPoint": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 20
    },
    "unitOfMeasure": {
      "type": "string",
      "required": true,
      "default": "kg"
    },
    "costPerUnit": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "lastPurchaseDate": {
      "type": "date"
    },
    "lastPurchasePrice": {
      "type": "decimal",
      "min": 0
    },
    "expirationDate": {
      "type": "date"
    },
    "batchNumber": {
      "type": "string"
    },
    "location": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["in_stock", "low_stock", "out_of_stock", "expired"],
      "default": "in_stock"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "notes": {
      "type": "text"
    },
    "movements": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::inventory-movement.inventory-movement",
      "mappedBy": "inventory"
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
