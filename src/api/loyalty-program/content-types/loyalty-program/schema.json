{
  "kind": "collectionType",
  "collectionName": "loyalty_programs",
  "info": {
    "singularName": "loyalty-program",
    "pluralName": "loyalty-programs",
    "displayName": "Loyalty Program",
    "description": "Programas de fidelidade e pontuação"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "pointsPerReal": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 1
    },
    "realsPerPoint": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 0.01
    },
    "minimumPointsToRedeem": {
      "type": "integer",
      "min": 0,
      "default": 100
    },
    "maximumPointsPerOrder": {
      "type": "integer",
      "min": 0
    },
    "pointsExpirationDays": {
      "type": "integer",
      "min": 0,
      "default": 365
    },
    "welcomeBonus": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "birthdayBonus": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "referralBonus": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "tiers": {
      "type": "json",
      "default": []
    },
    "specialOffers": {
      "type": "json",
      "default": []
    },
    "customers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::customer.customer",
      "mappedBy": "loyaltyPrograms"
    },
    "pointsTransactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::points-transaction.points-transaction",
      "mappedBy": "loyaltyProgram"
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
