{
  "kind": "singleType",
  "collectionName": "settings",
  "info": {
    "singularName": "setting",
    "pluralName": "settings",
    "displayName": "Settings",
    "description": "Configurações globais do sistema"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "storeName": {
      "type": "string",
      "required": true,
      "default": "Sellvex Eats"
    },
    "storeLogo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "storeDescription": {
      "type": "text"
    },
    "storeEmail": {
      "type": "email"
    },
    "storePhone": {
      "type": "string"
    },
    "deliveryFee": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 5
    },
    "minimumOrderValue": {
      "type": "decimal",
      "min": 0,
      "default": 0
    }
  }
}