{
  "kind": "singleType",
  "collectionName": "settings",
  "info": {
    "singularName": "setting",
    "pluralName": "settings",
    "displayName": "Settings",
    "description": "Configurações globais do sistema"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "storeName": {
      "type": "string",
      "required": true,
      "default": "Sellvex Eats"
    },
    "storeLogo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "storeFavicon": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "storeDescription": {
      "type": "text"
    },
    "storeEmail": {
      "type": "email"
    },
    "storePhone": {
      "type": "string"
    },
    "storeAddressText": {
      "type": "text",
      "required": true
    },
    "businessHoursText": {
      "type": "text"
    },
    "deliveryFee": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "default": 5
    },
    "freeDeliveryThreshold": {
      "type": "decimal",
      "min": 0
    },
    "deliveryTimeMin": {
      "type": "integer",
      "min": 0,
      "default": 30
    },
    "deliveryTimeMax": {
      "type": "integer", 
      "min": 0,
      "default": 60
    },
    "preparationTimeMin": {
      "type": "integer",
      "min": 0,
      "default": 15
    },
    "preparationTimeMax": {
      "type": "integer",
      "min": 0,
      "default": 45
    },
    "deliveryZones": {
      "type": "json"
    },
    "paymentMethodsText": {
      "type": "text"
    },
    "minimumOrderValue": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "taxRate": {
      "type": "decimal",
      "min": 0,
      "max": 100
    },
    "socialMediaLinks": {
      "type": "json"
    },
    "metaTitle": {
      "type": "string"
    },
    "metaDescription": {
      "type": "text"
    },
    "maintenanceMode": {
      "type": "boolean",
      "default": false
    },
    "maintenanceMessage": {
      "type": "text"
    },
    "metadata": {
      "type": "json"
    }
  }
}
