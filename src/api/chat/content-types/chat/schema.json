{
  "kind": "collectionType",
  "collectionName": "chats",
  "info": {
    "singularName": "chat",
    "pluralName": "chats",
    "displayName": "Chat",
    "description": "Mensagens de chat entre usu√°rios do sistema"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "message": {
      "type": "text",
      "required": true
    },
    "sender": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "chatsSent"
    },
    "receiver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "chatsReceived"
    },
    "order": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order"
    },
    "isRead": {
      "type": "boolean",
      "default": false
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    }
  }
}
