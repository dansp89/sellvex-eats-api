{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Pedidos do sistema de delivery"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {

    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "orders"
    },
    "items": {
      "type": "json",
      "required": true
    },


    "subtotal": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "deliveryFee": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },

    "discount": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "preparing",
        "ready_for_delivery",
        "out_for_delivery",
        "delivered",
        "cancelled",
        "refunded"
      ],
      "default": "pending",
      "required": true
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "credit_card",
        "debit_card",
        "pix",
        "cash",
        "online_payment"
      ],
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "authorized",
        "paid",
        "refunded",
        "voided",
        "error"
      ],
      "default": "pending"
    },


    "deliveryDriver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::delivery-driver.delivery-driver",
      "inversedBy": "orders"
    },



    "metadata": {
      "type": "json"
    }
  }
}
