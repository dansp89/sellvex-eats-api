{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order",
    "description": "Pedidos do sistema de delivery"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "unique": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "orders"
    },
    "itemsDescription": {
      "type": "text"
    },
    "deliveryAddressText": {
      "type": "text",
      "required": true
    },
    "billingAddressText": {
      "type": "text"
    },
    "subtotal": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "deliveryFee": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "discount": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "confirmed",
        "preparing",
        "ready_for_delivery",
        "out_for_delivery",
        "delivered",
        "cancelled",
        "refunded"
      ],
      "default": "pending",
      "required": true
    },
    "paymentMethod": {
      "type": "enumeration",
      "enum": [
        "credit_card",
        "debit_card",
        "pix",
        "cash",
        "online_payment"
      ],
      "required": true
    },
    "paymentStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "authorized",
        "paid",
        "refunded",
        "voided",
        "error"
      ],
      "default": "pending"
    },
    "paymentId": {
      "type": "string"
    },
    "deliveryInstructions": {
      "type": "text"
    },
    "specialRequests": {
      "type": "text"
    },
    "estimatedDeliveryTime": {
      "type": "integer",
      "min": 0
    },
    "actualDeliveryTime": {
      "type": "integer",
      "min": 0
    },
    "deliveryTrackingUrl": {
      "type": "string"
    },
    "driverLocation": {
      "type": "json"
    },
    "preparationStarted": {
      "type": "datetime"
    },
    "preparationCompleted": {
      "type": "datetime"
    },
    "pickedUpAt": {
      "type": "datetime"
    },
    "scheduledFor": {
      "type": "datetime"
    },
    "deliveredAt": {
      "type": "datetime"
    },
    "cancelledAt": {
      "type": "datetime"
    },
    "cancellationReason": {
      "type": "text"
    },
    "coupon": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::coupon.coupon",
      "inversedBy": "orders"
    },
    "deliveryDriver": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::delivery-driver.delivery-driver",
      "inversedBy": "orders"
    },
    "rating": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "review": {
      "type": "text"
    },
    "payment": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment.payment",
      "mappedBy": "order"
    },
    "metadata": {
      "type": "json"
    }
  }
}
