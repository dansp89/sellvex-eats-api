    },
    "priority": {
      "type": "integer",
      "default": 0
    },
    "startDate": {
      "type": "datetime"
    },
    "endDate": {
      "type": "datetime"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "targetAudience": {
      "type": "enumeration",
      "enum": ["all", "new_customers", "existing_customers", "vip_customers"],
      "default": "all"
    },
    "clickCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "impressionCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "metadata": {
      "type": "json",
      "default": {}
