{
  "kind": "collectionType",
  "collectionName": "carts",
  "info": {
    "singularName": "cart",
    "pluralName": "carts",
    "displayName": "Cart",
    "description": "Carrinho de compras (incluindo abandonados)"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer",
      "inversedBy": "carts"
    },
    "sessionId": {
      "type": "string",
      "required": true
    },
    "items": {
      "type": "json",
      "required": true,
      "default": []
    },
    "subtotal": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "discountAmount": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "deliveryFee": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "total": {
      "type": "decimal",
      "min": 0,
      "default": 0
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "abandoned", "converted", "expired"],
      "default": "active"
    },
    "deliveryAddress": {
      "type": "json"
    },
    "appliedCoupon": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::coupon.coupon"
    },
    "lastActivity": {
      "type": "datetime"
    },
    "abandonedAt": {
      "type": "datetime"
    },
    "convertedAt": {
      "type": "datetime"
    },
    "recoveryEmailSent": {
      "type": "boolean",
      "default": false
    },
    "recoveryEmailSentAt": {
      "type": "datetime"
    },
    "deviceInfo": {
      "type": "json",
      "default": {}
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
