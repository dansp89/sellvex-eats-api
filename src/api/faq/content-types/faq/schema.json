{
  "kind": "collectionType",
  "collectionName": "faqs",
  "info": {
    "singularName": "faq",
    "pluralName": "faqs",
    "displayName": "FAQ",
    "description": "Perguntas frequentes"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "question": {
      "type": "string",
      "required": true
    },
    "answer": {
      "type": "richtext",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["orders", "delivery", "payment", "products", "account", "general"],
      "default": "general"
    },
    "order": {
      "type": "integer",
      "default": 0
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "viewCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "helpfulCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "notHelpfulCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "tags": {
      "type": "json",
      "default": []
    },
    "relatedFaqs": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::faq.faq"
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
