{
  "kind": "collectionType",
  "collectionName": "delivery_drivers",
  "info": {
    "singularName": "delivery-driver",
    "pluralName": "delivery-drivers",
    "displayName": "Delivery Driver",
    "description": "Entregadores do sistema de delivery"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "user": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "plugin::users-permissions.user"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "phone": {
      "type": "string",
      "required": true
    },
    "vehicleType": {
      "type": "enumeration",
      "enum": ["motorcycle", "bicycle", "car"],
      "required": true,
      "default": "motorcycle"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "deliveryDriver"
    },
    "notifications": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::notification.notification",
      "mappedBy": "deliveryDriver"
    }
  }
}