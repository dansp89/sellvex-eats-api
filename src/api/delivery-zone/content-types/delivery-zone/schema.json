{
  "kind": "collectionType",
  "collectionName": "delivery_zones",
  "info": {
    "singularName": "delivery-zone",
    "pluralName": "delivery-zones",
    "displayName": "Delivery Zone",
    "description": "Zonas de entrega com taxas espec√≠ficas"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "neighborhoods": {
      "type": "json",
      "default": []
    },
    "zipCodes": {
      "type": "json",
      "default": []
    },
    "coordinates": {
      "type": "json",
      "default": {}
    },
    "deliveryFee": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "freeDeliveryThreshold": {
      "type": "decimal",
      "min": 0
    },
    "estimatedDeliveryTimeMin": {
      "type": "integer",
      "min": 0,
      "default": 30
    },
    "estimatedDeliveryTimeMax": {
      "type": "integer",
      "min": 0,
      "default": 60
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "priority": {
      "type": "integer",
      "default": 0
    },
    "maxDistance": {
      "type": "decimal",
      "min": 0
    },
    "serviceHoursText": {
      "type": "text"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "deliveryZone"
    },
    "drivers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::delivery-driver.delivery-driver",
      "mappedBy": "workingZones"
    },
    "specialInstructions": {
      "type": "text"
    },
    "isEmergencyZone": {
      "type": "boolean",
      "default": false
    }
  }
}
