{
  "kind": "collectionType",
  "collectionName": "newsletters",
  "info": {
    "singularName": "newsletter",
    "pluralName": "newsletters",
    "displayName": "Newsletter",
    "description": "Campanhas de email marketing e newsletter"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "subject": {
      "type": "string",
      "required": true
    },
    "content": {
      "type": "richtext",
      "required": true
    },
    "htmlContent": {
      "type": "text"
    },
    "templateType": {
      "type": "enumeration",
      "enum": ["promotional", "newsletter", "transactional", "announcement"],
      "default": "newsletter"
    },
    "targetAudience": {
      "type": "enumeration",
      "enum": ["all", "subscribers", "customers", "new_customers", "inactive_customers"],
      "default": "subscribers"
    },
    "scheduledFor": {
      "type": "datetime"
    },
    "sentAt": {
      "type": "datetime"
    },
    "status": {
      "type": "enumeration",
      "enum": ["draft", "scheduled", "sent", "cancelled"],
      "default": "draft"
    },
    "recipientsCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "sentCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "openedCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "clickedCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files"]
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
