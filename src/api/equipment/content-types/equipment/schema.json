{
  "kind": "collectionType",
  "collectionName": "equipment",
  "info": {
    "singularName": "equipment",
    "pluralName": "equipments",
    "displayName": "Equipment",
    "description": "Equipamentos da cozinha e loja"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "code": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": ["kitchen", "refrigeration", "heating", "cleaning", "pos", "delivery", "other"],
      "required": true
    },
    "brand": {
      "type": "string"
    },
    "model": {
      "type": "string"
    },
    "serialNumber": {
      "type": "string",
      "unique": true
    },
    "purchaseDate": {
      "type": "date"
    },
    "purchasePrice": {
      "type": "decimal",
      "min": 0
    },
    "warrantyExpiration": {
      "type": "date"
    },
    "branch": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::store-branch.store-branch",
      "inversedBy": "equipment"
    },
    "location": {
      "type": "string"
    },
    "status": {
      "type": "enumeration",
      "enum": ["active", "maintenance", "repair", "inactive", "disposed"],
      "default": "active"
    },
    "lastMaintenanceDate": {
      "type": "date"
    },
    "nextMaintenanceDate": {
      "type": "date"
    },
    "maintenanceInterval": {
      "type": "integer",
      "min": 0
    },
    "supplier": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::supplier.supplier"
    },
    "responsibleEmployee": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::employee.employee"
    },
    "maintenanceRecords": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::maintenance-record.maintenance-record",
      "mappedBy": "equipment"
    },
    "specifications": {
      "type": "json",
      "default": {}
    },
    "notes": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images"]
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
