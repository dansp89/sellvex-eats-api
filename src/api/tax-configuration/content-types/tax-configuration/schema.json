{
  "kind": "collectionType",
  "collectionName": "tax_configurations",
  "info": {
    "singularName": "tax-configuration",
    "pluralName": "tax-configurations",
    "displayName": "Tax Configuration",
    "description": "Configurações de impostos por região e categoria"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "region": {
      "type": "string",
      "required": true
    },
    "state": {
      "type": "string"
    },
    "city": {
      "type": "string"
    },
    "zipCodes": {
      "type": "json",
      "default": []
    },
    "taxType": {
      "type": "enumeration",
      "enum": ["sales_tax", "service_tax", "delivery_tax", "environmental_tax"],
      "required": true
    },
    "rate": {
      "type": "decimal",
      "required": true,
      "min": 0,
      "max": 100
    },
    "isPercentage": {
      "type": "boolean",
      "default": true
    },
    "fixedAmount": {
      "type": "decimal",
      "min": 0
    },
    "minimumTaxAmount": {
      "type": "decimal",
      "min": 0
    },
    "maximumTaxAmount": {
      "type": "decimal",
      "min": 0
    },
    "applicableCategories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "taxConfigurations"
    },
    "exemptCategories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category"
    },
    "effectiveDate": {
      "type": "date",
      "required": true
    },
    "expirationDate": {
      "type": "date"
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "priority": {
      "type": "integer",
      "default": 0
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
