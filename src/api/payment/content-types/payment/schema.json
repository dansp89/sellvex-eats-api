{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "singularName": "payment",
    "pluralName": "payments",
    "displayName": "Payment",
    "description": "Pagamentos dos pedidos"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "amount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "method": {
      "type": "enumeration",
      "enum": ["credit_card", "debit_card", "pix", "cash"],
      "required": true
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "completed", "failed", "refunded"],
      "default": "pending"
    },
    "transactionId": {
      "type": "string"
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer"
    }
  }
}