{
  "kind": "collectionType",
  "collectionName": "support_tickets",
  "info": {
    "singularName": "support-ticket",
    "pluralName": "support-tickets",
    "displayName": "Support Ticket",
    "description": "Tickets de suporte e atendimento"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "ticketNumber": {
      "type": "string",
      "unique": true,
      "required": true
    },
    "customer": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::customer.customer"
    },
    "assignedTo": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "subject": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["order_issue", "payment_problem", "delivery_issue", "product_quality", "refund_request", "complaint", "suggestion", "technical_issue", "other"],
      "required": true
    },
    "priority": {
      "type": "enumeration",
      "enum": ["low", "medium", "high", "urgent"],
      "default": "medium"
    },
    "status": {
      "type": "enumeration",
      "enum": ["open", "in_progress", "waiting_customer", "escalated", "resolved", "closed"],
      "default": "open"
    },
    "source": {
      "type": "enumeration",
      "enum": ["app", "website", "phone", "email", "chat", "social_media"],
      "default": "app"
    },
    "relatedOrder": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::order.order"
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "files"]
    },
    "assignedAt": {
      "type": "datetime"
    },
    "firstResponseAt": {
      "type": "datetime"
    },
    "resolvedAt": {
      "type": "datetime"
    },
    "closedAt": {
      "type": "datetime"
    },
    "customerSatisfactionRating": {
      "type": "integer",
      "min": 1,
      "max": 5
    },
    "customerFeedback": {
      "type": "text"
    },
    "internalNotes": {
      "type": "text"
    },
    "resolution": {
      "type": "text"
    },
    "escalationReason": {
      "type": "text"
    },
    "tags": {
      "type": "json",
      "default": []
    },
    "metadata": {
      "type": "json",
      "default": {}
    }
  }
}
