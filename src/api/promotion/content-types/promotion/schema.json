{
  "kind": "collectionType",
  "collectionName": "promotions",
  "info": {
    "singularName": "promotion",
    "pluralName": "promotions",
    "displayName": "Promotion",
    "description": "Promoções e ofertas especiais"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "code": {
      "type": "string",
      "unique": true
    },
    "discountType": {
      "type": "enumeration",
      "enum": ["percentage", "fixed_amount", "buy_x_get_y", "free_shipping"],
      "required": true,
      "default": "percentage"
    },
    "discountValue": {
      "type": "decimal",
      "min": 0
    },
    "minOrderAmount": {
      "type": "decimal",
      "min": 0
    },
    "maxDiscountAmount": {
      "type": "decimal",
      "min": 0
    },
    "startDate": {
      "type": "datetime",
      "required": true
    },
    "endDate": {
      "type": "datetime",
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "usageLimit": {
      "type": "integer",
      "min": 0
    },
    "usageCount": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "singleUsePerCustomer": {
      "type": "boolean",
      "default": false
    },
    "customerEligibility": {
      "type": "enumeration",
      "enum": ["all", "new_customers", "existing_customers", "specific_customers"],
      "default": "all"
    },
    "customers": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::customer.customer",
      "mappedBy": "promotions"
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "promotions"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "promotions"
    },
    "combos": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::combo.combo",
      "mappedBy": "promotions"
    },
    "bannerImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "termsAndConditions": {
      "type": "richtext"
    },
    "metadata": {
      "type": "json"
    }
  }
}
