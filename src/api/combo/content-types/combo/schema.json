{
  "kind": "collectionType",
  "collectionName": "combos",
  "info": {
    "singularName": "combo",
    "pluralName": "combos",
    "displayName": "Combo",
    "description": "Combos promocionais que agrupam produtos"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "description": {
      "type": "text"
    },
    "price": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "discount": {
      "type": "decimal",
      "min": 0,
      "max": 100,
      "default": 0
    },
    "finalPrice": {
      "type": "decimal",
      "min": 0
    },
    "image": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "validFrom": {
      "type": "datetime"
    },
    "validUntil": {
      "type": "datetime"
    },
    "maxUses": {
      "type": "integer",
      "min": 0
    },
    "currentUses": {
      "type": "integer",
      "min": 0,
      "default": 0
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::product.product",
      "mappedBy": "combos"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "mappedBy": "combos"
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "combo"
    },
    "promotions": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::promotion.promotion",
      "mappedBy": "combos"
    },
    "minimumItems": {
      "type": "integer",
      "min": 1,
      "default": 2
    },
    "maximumItems": {
      "type": "integer",
      "min": 1
    },
    "tags": {
      "type": "json",
      "default": []
    },
    "preparationTime": {
      "type": "integer",
      "min": 1,
      "default": 20
    },
    "wishlists": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::wishlist.wishlist",
      "inversedBy": "combos"
    }
  }
}
